<Window x:Class="Diet.Weight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:p="clr-namespace:Diet.Properties"
        xmlns:local="clr-namespace:Diet"
        mc:Ignorable="d"
        Title="Weight" Height="150" Width="300"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#FF292929">
        <StackPanel Orientation="Horizontal" Width="150" Height="35" FocusManager.FocusedElement="{Binding ElementName=tbox}">
            <TextBlock FontSize="15" Text="{x:Static p:Resource.YourWeight}" Margin="5" Foreground="#FF77D1CE"/>
            <TextBox x:Name="tbox" FontSize="15" Foreground="#FF77D1CE"
                     HorizontalContentAlignment="Center" Width="30" Margin="5" Background="#FF373737"/>
        </StackPanel>
    </Grid>
</Window>
